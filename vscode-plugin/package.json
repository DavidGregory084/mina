{
  "name": "mina-lang-vscode",
  "displayName": "Mina",
  "description": "The VS Code language extension for Mina",
  "publisher": "mina-lang",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write src",
    "format-check": "npx prettier --check src",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test-linux": "xvfb-run -a npm run test"
  },
  "dependencies": {
    "jdk-utils": "^0.4.3",
    "vscode-languageclient": "^8.0.0"
  },
  "devDependencies": {
    "@microsoft/vscode-file-downloader-api": "^1.0.1",
    "@tsconfig/node16": "^1.0.4",
    "@tsconfig/recommended": "^1.0.2",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.39",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:mina"
  ],
  "contributes": {
    "configuration": {
      "title": "Mina",
      "properties": {
        "mina.serverJarPath": {
          "type": "string",
          "markdownDescription": "The path to the server JAR file. Used for testing the language server locally."
        }
      }
    },
    "languages": [
      {
        "id": "mina",
        "aliases": [
          "Mina",
          "mina"
        ],
        "extensions": [
          ".mina"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mina",
        "scopeName": "source.mina",
        "path": "./syntaxes/mina.tmLanguage.json"
      }
    ]
  },
  "extensionDependencies": [
    "mindaro-dev.file-downloader"
  ]
}
